{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": "standard-with-typescript",
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "semi": "off",
    "@typescript-eslint/semi": ["error", "always"],

    "space-before-function-paren": "off",
    "@typescript-eslint/space-before-function-paren": "off",

    "@typescript-eslint/member-delimiter-style": "off"
  }
}
